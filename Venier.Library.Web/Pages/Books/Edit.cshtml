@page "{id}"
@model Venier.Library.Web.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="editBook.Title"></label>
            <input type="text" class="form-control" asp-for="editBook.Title">
            <span class="text-danger" asp-validation-for="editBook.Title"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="editBook.Author"></label>
            <input type="text" class="form-control" asp-for="editBook.Author">
            <span class="text-danger" asp-validation-for="editBook.Author"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="editBook.Description"></label>
        <input type="text" class="form-control" asp-for="editBook.Description">
        <span class="text-danger" asp-validation-for="editBook.Description"></span>
    </div>
    <div class="it-datepicker-wrapper theme-dark">
        <div class="form-group">
            <label asp-for="editBook.CreationDate"></label>
            <input type="text" class="form-control" asp-for="editBook.CreationDate">
            <span class="text-danger" asp-validation-for="editBook.CreationDate"></span>
        </div>
    </div>
    <div class="it-datepicker-wrapper theme-dark">
        <div class="form-group">
            <label asp-for="editBook.PublishedDate"></label>
            <input type="text" class="form-control" asp-for="editBook.PublishedDate">
            <span class="text-danger" asp-validation-for="editBook.PublishedDate"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="editBook.IsRead">
            <label class="form-check-label" asp-for="editBook.IsRead"></label>
            <span class="text-danger" asp-validation-for="editBook.IsRead"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary" style="float:right;">Edit</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
