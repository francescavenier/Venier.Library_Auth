<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Venier.Library.Web</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 sticky-top">
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="sidenav">
            <a class="sidebar-brand" asp-page="/Index">
                <div>
                    <img class="sidebar-icon" src="~/img/books-stack-of-three.png" alt="Books" />
                </div>
                <div class="h3 font-weight-bold text-uppercase mb-1">My library</div>
            </a>
            <hr class="sidebar-divider my-0">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-page="/Search"><div class="h6 mb-0 font-weight-bold text-gray-800">New book</div></a>
            }
                <a asp-page="/Privacy"><div class="h6 mb-0 font-weight-bold text-gray-800">Privacy</div></a>
            </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Venier.Library.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
