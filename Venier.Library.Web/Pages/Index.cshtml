                                     <i class="fas fa-calendar fa-2x text-gray-300"></i>
                                </div>
                                src="~/Images/books-stack-of-three.png"
                            -->
                            <br /><br />
                            <div class="fakebtn">
                                <a asp-page="/Books/Details" asp-route-id="@book.Id">Details</a>
                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="fakebtn">
                                    <a asp-page="Books/Delete" asp-route-id="@book.Id">Elimina</a>
                                </div>
                                <div class="fakebtn">
                                    <a asp-page="Books/Edit" asp-route-id="@book.Id">Modifica</a>
                                </div>
                            }


                        </div>
                    </div>

                </div>
            </div>
        </div>
