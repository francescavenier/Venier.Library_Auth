@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
</div>
<div class="row">
    @foreach (var book in Model.Books)
    {
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 card-style">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h3 font-weight-bold text-primary text-uppercase mb-1">@book.Title</div>
                            <div class="h6 mb-0 font-weight-bold text-gray-800">@book.Author</div>
                            <div class="h6 mb-0  text-gray-800">@book.Description</div>
                            <br /><br />
                                  <div class="btn-box">
                                      <div class="fakebtn">
                                          <a asp-page="/Books/Details" asp-route-id="@book.Id">Details</a>
                                      </div>
                                      @if (User.Identity.IsAuthenticated)
                                      {
                                          <div class="fakebtn">
                                              <a asp-page="Books/Edit" asp-route-id="@book.Id">Edit</a>
                                          </div>
                                          <div class="fakebtn" style="background-color:black">
                                              <a asp-page="Books/Delete" asp-route-id="@book.Id">Delete</a>
                                          </div>

                                      }
                                  </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        }
    </div>


